
<% include toplayout%>

<div class="jumbotron">
  <h1>Login</h1>
</div>

<form role="form" method="POST">
    <% if (failedLogIn) { %>
    <h4 id="errormsg"><%= loginMessage %></h4>
    <% } %>
  <div class="form-group">
    <label for="username">User Name</label>
    <input type="text" class="form-control" name="username" id="username" placeholder="Enter User Name">
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
  </div>
  <button type="submit" name="action" class="btn btn-primary" value="signin">Sign In</button>
  <button type="submit" id="signup" name="action" class="btn btn-default" value="signup">Sign up</button>
</form>

<% include bottomlayout %>